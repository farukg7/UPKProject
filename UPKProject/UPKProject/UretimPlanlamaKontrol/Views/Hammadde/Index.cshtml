@model HammaddeListViewModel



<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("KategoriMenu")
        @await Component.InvokeAsync("HammaddeFilterMenu") 
        <div hammaddeler="" number="2"></div>
    </div>
    <div class="col-md-9">
        <div class="row my-3">
            @foreach (Hammadde hmd in Model.Hammaddeler)
            {
                <partial name="_HammaddeCard" model="hmd" />
            }
        </div>
        <div class="text-center">
            <div
                page-model="@Model.Pagination" page-action="Index"
                page-classes-enabled="true"
                page-class="btn"
                page-class-normal="btn-outline-dark"
                page-class-selected="btn-primary"
                class="btn-group">
            </div>
        </div>
    </div>
</div>


