@model IEnumerable<Kategori>
    
<div class="mt-3">
    <h6 class="lead">
        <i class="fa fa-solid fa-bars text-secondary"></i>
        Kategoriler
    </h6>
</div>

<div class="my-4">
    <ul class="list-group">
        @foreach(var ktg in Model)
        {
            <li class="list-group-item">
                <a asp-action="Index" asp-route-kategoriId="@ktg.KategoriId">
                    @ktg.KategoriAdi
                </a>
            </li>
        }
    </ul>
</div>