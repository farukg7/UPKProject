@model IEnumerable<Urun>

<div class="main-content flex-grow-1 p-3">
    <div class="d-flex justify-content-center align-items-center mb-4 position-relative">
        <h2 class="m-0">Ürünler</h2>
        <a class="btn btn-outline-success position-absolute end-0" asp-action="CreateUrun">
            <i class="fa-solid fa-gift"></i>
            Ürün oluştur
        </a>
    </div>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Ürün Adı</th>
            <th>Ürün Sayısı</th>
            <th>Ürün Fiyatı</th>
            <th>Ürün Resmi</th>
            <th>İş Emri</th>
            <th>Proje Adı</th>
            <th>Operasyon</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Urun urun in Model)
        {
            <tr>
                <td>@urun.UrunAdi</td>
                <td>@urun.UrunMiktari</td>
                <td>@urun.SatisFiyati</td>
                <td>@urun.UrunResimUrl</td>
                <td>@urun.IsEmrı</td>
                <td>@urun.Proje?.ProjeAdi</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-warning" asp-action="Update" asp-controller="Hammadde" asp-route-id="@urun.UrunId">
                            <i class="fa fa-edit"></i>
                            Güncelle
                        </a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Hammadde" asp-route-id="@urun.UrunId">
                            <i class="fa fa-trash"></i>
                            Sil
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
    
